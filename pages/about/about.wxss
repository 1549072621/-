Page {
    font-size: 14px;
}

.top {
    width: 100%;
    height: 350rpx;
    background: #23EBB9;
    padding-top: 30rpx;
    position: relative;
}

.center {
    width: 95%;
    height: 300rpx;
    background: white;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    border-radius: 20rpx;
}

.center_top {
    display: flex;
    flex-direction: row;
    width: 80%;
    height: 160rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    border-bottom: 2rpx solid #EEEEEE;
}

.center_img {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    overflow: hidden;
}

.center_img image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.center_img .user_head {
    width: 100%;
    height: 100%;
}

.center_info {
    display: flex;
    flex-direction: column;
    margin-top: 10rpx;
    margin-left: 60rpx;
}

.center_name {
    font-size: 40rpx;
}

.center_phone {
    color: #BEBEBE;
}

.center_down {
    display: flex;
    flex-direction: row;
    width: 80%;
    height: 70rpx;
    margin: 0 auto;
    margin-top: 20rpx;
}

.center_rank {
    width: 50%;
    height: 70rpx;
    display: flex;
    flex-direction: row;
}

.rank_text {
    height: 70rpx;
    line-height: 70rpx;
    margin-left: 10rpx;
    color: #AAAAAA;
}

.center_rank image {
    width: 70rpx;
    height: 70rpx;
}

.center_score {
    width: 50%;
    height: 70rpx;
    display: flex;
    flex-direction: row;
}

.center_score image {
    width: 70rpx;
    height: 70rpx;
}

.gif-wave {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx;
}

.copyright {
    text-align: center;
}

.contact-btn {
    display: inline-block;
    position: absolute;
    width: 100%;
    background: salmon;
    opacity: 0;
}